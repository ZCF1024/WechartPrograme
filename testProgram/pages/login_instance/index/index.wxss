page {
  height: 100%;
}

.content{
  border-bottom: 10rpx;
  border-bottom-style: solid;
  border-bottom-color: #d3d2d3;
}

.header {
  border-left-width: 5rpx;
  border-left-style: solid;
  border-left-color: limegreen;
  margin-right: 20rpx;
  margin-top: 15rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: space-between;
}

.scroll-image{
  height: 100%;
  width: 100%;
}

.topcontent{
  padding-bottom: 20rpx;
}

.topcontent-items {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.topcontent-item {
  /*子组件是设置flex时父组件必须也是flex布局才能生效*/
  height: 250rpx;
  width: 47.5%;
  position: relative;
  background-color: yellowgreen;
  margin-bottom: 10rpx;
}

.topcontent-item-image {
  height: 100%;
  width: 100%;
}

.topcontent-item-text {
  position: absolute;  /*其父控件徐定义position: relative*/
  bottom: 0rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 10px;
  width: 96%;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.6), rgba(255, 255, 255, 0.3)); /*第四个参数为透明度*/
  /* display: flex;
  flex-direction: column;
  justify-content: flex-end; */
  padding-left: 2%;
  padding-bottom: 2%;
  padding-right: 2%;
}

.bottomheader{
  margin-top: 35rpx;
  margin-bottom: 10rpx;
}
.bottomcontent {
  display: flex;
  flex-direction: column;
}

.bottomcontent-item {
  height: 550rpx;
  width: 100%;
  margin-bottom: 8rpx;
}

.bottomcontent-item-images{
  height:410rpx;
  position: relative;
}
.bottomcontent-item-image{
  height:100%;
  width: 100%;
}

.bottomcontent-item-headimage{
  position: absolute;
  height: 120rpx;
  width: 120rpx;
  bottom: -60rpx;
  right: 30rpx;
}

.bottomcontent-item-text{
  padding-top: 10rpx;
  padding-left: 10rpx;
  padding-bottom: 10rpx;
  font-size: 35rpx;
}

.bottomcontent-item-text-title{
  color: #000000;
  font-weight: bold;  /*加粗*/
}

.bottomcontent-item-text-content{
  font-size: 32rpx;
  color: #6b6a6a;

}

.footcontent {
  display: flex;
  justify-content: space-around;
  background-color: #cccacc;
  flex-wrap: nowrap; /*此属性必须写在需对齐子组件的父组件上*/
  align-items: center; /*此属性必须写在需对齐子组件的父组件上*/
  height: 130rpx;
}

.footImage {
  height: 80%;
  display: flex;
  flex-direction: row;
}
